necro as entry
spell necro[_]:

    dead i_msg as 'Your val: '
    dead input as read[?i_msg]

    when ?input :
        also : tell['\ninput is true']
        also : when ?input eql 'true' : tell['\nof cource, you typed "true"']
        also : else : tell['\nbye!']

    else : tell['\ninput is false']
    also : tell['\nbye!']
end.