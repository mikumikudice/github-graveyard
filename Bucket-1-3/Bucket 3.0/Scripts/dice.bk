[to Mathf]

#dice in Bucket:

    bucket open:

        show: 'type "esist" to end script{n}{n}'
        
        str bin as sand with 'dice: 1d'
        num bout as 0

        while bin unlike 'esist' do:

            convert: bin to num

            set: bout to math_ran:1, bin
            show: '1d[0] = [1]{n}{n}' with bin, bout

            convert: bin to str
            set: bin to sand with 'dice: 1d'
        end l.
    end m.
close.